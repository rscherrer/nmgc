#' Test multivariate normality
#'
#' Uses Henze-Zirkler's test to assess the multivariate normality across groups and subsets of the data
#'
#' @param d A data frame
#' @param variables What variables to test?
#' @param grouping Grouping variable
#' @param nesting Nesting variable
#'
#' @return A data frame with HZ statistics and P-values for each group in each subset
#'
#' @export

test_multinorm <- function(d, variables, grouping, nesting = NULL) {

  library(MVN)
  library(tidyverse)

  if (is.null(nesting)) {
    d$nesting <- factor(1)
    nesting <- "nesting"
  }

  d <- d %>% split(f = .[, nesting])
  res <- do.call(rbind, lapply(d, function(d) {
    d <- d %>% split(f = .[, grouping])
    res <- data.frame(t(sapply(d, function(d) {
      res <- mvn(d[, variables], mvnTest = "hz")
      res <- res$multivariateNormality
      return (c(HZ = res$HZ, pvalue = res$'p value'))
    })))
    res$habitat <- rownames(res)
    rownames(res) <- NULL
    return (res)
  }))
  res[[nesting]] <- gsub("\\.[0-9]", "", rownames(res))
  rownames(res) <- NULL
  res <- res[, c(nesting, grouping, "HZ", "pvalue")]
  return (res)

}
